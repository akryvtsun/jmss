<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jmss.mvvm.LoginView">
    <children>
        <VBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <TextField fx:id="userNameTextField" alignment="BOTTOM_RIGHT" promptText="Username" />
                <PasswordField fx:id="passwordTextField" alignment="CENTER_RIGHT" promptText="Password" />
                <Button fx:id="loginButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="93.0" text="Login" textAlignment="CENTER" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
</AnchorPane>
